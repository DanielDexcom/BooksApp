<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_book_image"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_margin="40dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_book_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/book_lord_rings"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_book_image"
            tools:text="@string/book_lord_rings" />

        <TextView
            android:id="@+id/id_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/author_tolkien"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/id_book_title"
            app:layout_constraintTop_toBottomOf="@+id/id_book_title"
            tools:text="@string/author_tolkien" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/id_get_book_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/view_detail_text"
            android:theme="@style/GreenButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_author_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>