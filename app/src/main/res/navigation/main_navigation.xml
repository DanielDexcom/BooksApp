<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigationBooks">

    <fragment
        android:id="@+id/navigationBooks"
        android:name="com.itj.booksapp.ui.books.BooksFragment"
        android:label="@string/title_books_wishlist"
        tools:layout="@layout/books_fragment" >
        <action
            android:id="@+id/action_navigationBooks_to_exampleFragment"
            app:destination="@id/exampleFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigationSearch"
        android:name="com.itj.booksapp.ui.search.SearchFragment"
        android:label="@string/title_isbn_search"
        tools:layout="@layout/search_fragment" />
    <fragment
        android:id="@+id/navigationLibrary"
        android:name="com.itj.booksapp.ui.library.LibraryFragment"
        android:label="@string/title_library"
        tools:layout="@layout/library_fragment" />
    <fragment
        android:id="@+id/exampleFragment"
        android:name="com.itj.booksapp.ui.example.ExampleFragment"
        android:label="example_fragment"
        tools:layout="@layout/example_fragment" />
</navigation>